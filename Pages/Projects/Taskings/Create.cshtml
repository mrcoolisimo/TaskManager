@page
@model TaskManager.Pages.Projects.Taskings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="center">Add Task</h4>
<hr />
    <div class="subcol">
    </div>
    <form method="post" autocomplete="off">
        <div class="subform widen-mobile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tasking.TaskTitle" class="control-label"></label>
                <input asp-for="Tasking.TaskTitle" class="form-control" autocomplete="off"  value=""/>
                <span asp-validation-for="Tasking.TaskTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasking.Description" class="control-label"></label>
                <textarea asp-for="Tasking.Description" class="form-control" autocomplete="off" value=""></textarea>
                <span asp-validation-for="Tasking.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Tasking.Severity" autocomplete="off">
                    <option selected="selected" value="0">Low</option>
                    <option value="1">Medium</option>
                    <option value="2">High</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Tasking.Progression" autocomplete="off">
                    <option selected="selected" value="0">Created</option>
                    <option value="1">In Progress</option>
                    <option value="2">Completed</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label" autocomplete="off">Assign To</label>
                <select asp-for="Tasking.Assignment" asp-items="ViewBag.Members">
                    <option selected="selected" value="No One">None</option>
                </select>
            </div>
        </div>
        <div class="sub-mit widen-mobile">
            <input type="submit" value="Create" class="my-btn3 sizing" />
        </div>
    </form>
<div class="sizing sub-back widen-mobile">
    <a class="my-btn3-back" asp-page="/Projects/TaskManagement" asp-route-id=@ViewBag.ProjectID>Back to Project Page</a>
</div>
</div>
<br /><br /><br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
