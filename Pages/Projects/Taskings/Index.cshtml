    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasking[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasking[0].Severity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasking[0].Progression)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasking[0].Project)
            </th>
            <th></th>
        </tr>
