@page
@model TaskManager.Pages.Projects.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Owner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Title)
        </dd>
    </dl>
    <dl class="row">
        @foreach (var item in Model.Project.Tasks)
        {
            <dd>
                <a asp-page="./Taskings/Details" asp-route-id=@item.TaskingID>@Html.DisplayFor(modelitem => item.Description)</a>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Taskings/Create" asp-route-id="@Model.Project.ProjectID">Add Bug</a> | 
    <a asp-page="./Edit" asp-route-id="@Model.Project.ProjectID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
