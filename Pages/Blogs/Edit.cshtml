@page
@model TaskManager.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="blog-grey">

    <h1>Edit</h1>
    <hr />
    <div>
        <div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Blog.BlogID" />
                <div class="form-group">
                    <label asp-for="Blog.Title" class="control-label"></label>
                    <input asp-for="Blog.Title" class="form-control" />
                    <span asp-validation-for="Blog.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Blog.Post" class="control-label"></label>
                    <textarea asp-for="Blog.Post" class="wide-textbox"></textarea>
                    <span asp-validation-for="Blog.Post" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <label asp-for="Blog.Tags" class="control-label"></label>
                    <input asp-for="Blog.Tags" class="form-control" />
                    <span asp-validation-for="Blog.Tags" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
